<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <plugin>
        <name value="Administración IDD"/>
        <description value="Administración Blackboard IDD"></description>
        <handle value="Unive" />
        <version value="1.0.2" />

        <requires>
            <bbversion value="3900.13.0"/>
        </requires>

        <vendor>
            <id value="mex" />
            <name value="UPAEP"/>
            <url value="http://www.upaep.mx"/>
            <description value="Universidad Popular Autónoma del Estado de Puebla"/>
        </vendor>

        <http-actions>
            <config />
            <remove />
        </http-actions>

        <application-defs>
            <application handle="mexUnive" type="system" use-ssl="false" name="Admon BB IDD" can-allow-guest="false">
                <description lang="en-US">Herramientas de administración IDD</description>
                <links>
                    <link>
                        <type value="system_tool"/>
                        <name value="Herramientas  IDD"/>
                        <url value="index.jsp"/>
                        <description value="Innovación y Desarrollo Digital"/>
                    </link>
                </links>
            </application>
        </application-defs>

        <permissions>
            <permission type="persist" name="*" actions="create,persist,modify,delete"/>
            <permission type="attribute" name="user.authinfo" actions="get,set" />
            <permission type="attribute" name="user.personalinfo" actions="get,set" />
            <permission type="attribute" name="user.cardnumber" actions="get,set"/>
        </permissions>

    </plugin>
</manifest>
